{
	"compilerOptions": {
		"target": "ES5",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"jsx": "react-jsx",
		"outDir": "./dist/tsc",
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"strictNullChecks": true,
		"allowJs": true
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
